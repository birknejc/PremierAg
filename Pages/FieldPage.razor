@page "/fieldpage"
@page "/fieldpage{customerId:int}"
@using PAS.Models
@using PAS.Services
@inject FieldService FieldService
@inject CustomerService CustomerService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<h3>Fields</h3>

@if (isLoading)
{
    <p>Loading fields...</p>
}
else if (fields != null && fields.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Field Name</th>
                <th>Acres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var field in fields)
            {
                <tr>
                    <td>@field.Customer?.CustomerBusinessName</td>
                    <td>@field.FieldName</td>
                    <td>@field.Acres</td>
                    <td>
                        <button class="btn btn-warning" @onclick="() => EditField(field.Id)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteField(field.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No fields found.</p>
}

<button class="btn btn-primary" @onclick="ShowAddFieldModal">Add Field</button>

@if (showAddModal)
{
    <div class="modal" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add/Edit Field</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newField" OnValidSubmit="HandleAddOrUpdateField">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="form-group">
                            <label for="customerId">Customer</label>
                            <InputSelect id="customerId" class="form-control" @bind-Value="newField.CustomerId" required>
                                <option value="0">Select a Customer</option>
                                @foreach (var customer in customers)
                                {
                                    <option value="@customer.Id">@customer.CustomerBusinessName</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="form-group">
                            <label>Field Name</label>
                            <InputText class="form-control" @bind-Value="newField.FieldName" required />
                        </div>
                        <div class="form-group">
                            <label>Acres</label>
                            <InputNumber class="form-control" @bind-Value="newField.Acres" min="1" required />
                        </div>
                        <button type="button" class="btn btn-secondary" @onclick="ShowInvoiceSplitModal">Invoice Split</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showInvoiceSplitModal)
{
    <div class="modal" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Invoice Split</h5>
                    <button type="button" class="btn-close" @onclick="HideInvoiceSplitModal"></button>
                </div>
                <div class="modal-body">
                    <p>Select customers and enter their invoice split percentage:</p>
                    @foreach (var split in invoiceSplits)
                    {
                        <div class="row mb-2">
                            <div class="col-6">
                                <input type="checkbox" @bind="split.IsSelected" />
                                @split.CustomerBusinessName
                            </div>
                            <div class="col-6">
                                <InputNumber class="form-control"
                                             @bind-Value="split.InvoiceSplit"
                                             min="0" max="100"
                                             disabled="@(split.IsSelected == false)"
                                             placeholder="Invoice Split (%)" />
                            </div>
                        </div>
                    }
                    <button class="btn btn-success" @onclick="HideInvoiceSplitModal">Done</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public int? customerId { get; set; }

    private List<Field> fields = new();
    private List<Customer> customers = new();
    private Field newField = new();
    private bool showAddModal = false;
    private bool isLoading = true;
    private List<CustomerSplitEntry> invoiceSplits = new();
    private bool showInvoiceSplitModal = false;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        customers = await CustomerService.GetAllCustomersAsync();
        if (customerId.HasValue)
        {
            fields = await FieldService.GetFieldsByCustomerIdAsync(customerId.Value);
        }
        else
        {
            fields = await FieldService.GetAllFieldsAsync();
        }
        isLoading = false;
    }

    private void ShowAddFieldModal()
    {
        newField = new Field(); // Reset the new field completely
        newField.CustomerId = 0; // Ensure CustomerId is set to 0 initially
        showAddModal = true;
    }

    private void HideModal()
    {
        showAddModal = false;
    }

    private async Task HandleAddOrUpdateField()
    {
        if (newField.CustomerId == 0 || newField.Acres <= 0 || string.IsNullOrEmpty(newField.FieldName))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please fill out all fields correctly.");
            return;
        }

        // Save Field
        if (newField.Id == 0)
        {
            await FieldService.AddFieldAsync(newField);
        }
        else
        {
            await FieldService.UpdateFieldAsync(newField);
        }

        // Save Invoice Splits if any are selected
        if (invoiceSplits.Any(s => s.IsSelected))
        {
            var fieldId = newField.Id; // If AddFieldAsync returns the new Id, use that
            foreach (var split in invoiceSplits.Where(s => s.IsSelected))
            {
                var customerField = new CustomerField
                    {
                        FieldId = fieldId,
                        CustomerId = split.CustomerId,
                        InvoiceSplit = split.InvoiceSplit
                    };
                await FieldService.AddCustomerFieldAsync(customerField);
            }
        }
        else
        {
            // Default: main customer gets 100%
            var customerField = new CustomerField
                {
                    FieldId = newField.Id,
                    CustomerId = newField.CustomerId,
                    InvoiceSplit = 100
                };
            await FieldService.AddCustomerFieldAsync(customerField);
        }

        if (customerId.HasValue)
        {
            fields = await FieldService.GetFieldsByCustomerIdAsync(customerId.Value);
        }
        else
        {
            fields = await FieldService.GetAllFieldsAsync();
        }

        showAddModal = false;
        invoiceSplits.Clear();
    }


    private async Task EditField(int id)
    {
        var field = await FieldService.GetFieldByIdAsync(id);
        if (field != null)
        {
            newField = field;
            showAddModal = true;
        }
    }

    private async Task DeleteField(int id)
    {
        await FieldService.DeleteFieldAsync(id);

        if (customerId.HasValue)
        {
            fields = await FieldService.GetFieldsByCustomerIdAsync(customerId.Value);
        }
        else
        {
            fields = await FieldService.GetAllFieldsAsync();
        }
    }

    public class CustomerSplitEntry
    {
        public int CustomerId { get; set; }
        public string CustomerBusinessName { get; set; }
        public bool IsSelected { get; set; }
        public decimal InvoiceSplit { get; set; }
    }

    private void ShowInvoiceSplitModal()
    {
        // Initialize splits if not already done
        if (invoiceSplits.Count == 0)
        {
            invoiceSplits = customers.Select(c =>
            {
                return new CustomerSplitEntry
                    {
                        CustomerId = c.Id,
                        CustomerBusinessName = c.CustomerBusinessName,
                        IsSelected = c.Id == newField.CustomerId,
                        InvoiceSplit = c.Id == newField.CustomerId ? 100 : 0
                    };
            }).ToList();

        }
        showInvoiceSplitModal = true;
    }

    private void HideInvoiceSplitModal()
    {
        showInvoiceSplitModal = false;
    }


}
