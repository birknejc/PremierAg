@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace PAS.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="PAS.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <script src="js/site.js"></script>

    <script>
        function showAlert(message) {
            alert(message);
        }
    </script>


    <script>
        function openPrintWindow(printContent) {
            // Create a new window
            var printWindow = window.open('', '', 'width=800,height=600');

            // Check if the window was successfully created (i.e. not blocked by a popup blocker)
            if (!printWindow) {
                alert("Popup was blocked. Please allow popups for this site to print.");
                return;
            }

            // Open the document for writing
            printWindow.document.open();
            printWindow.document.write(printContent);
            printWindow.document.close();

            // Wait a bit to ensure the content is loaded (optional, you might adjust the timeout)
            setTimeout(function () {
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            }, 500);
        }
    </script>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
